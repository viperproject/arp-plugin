field f : Int
field g : Int

method foo(x: Ref)
requires acc(x.f, write) && x.g != null ? acc(x.g, rd) : acc(x.g, rdc(1))
ensures acc(x.f, write) && x.g != null ? acc(x.g, rd) : acc(x.g, rdc(1))
ensures x.f == x.g + 1
{
    x.f := x.g + 1
}

method client(x: Ref)
requires acc(x.f, write) && acc(x.g, write)
ensures acc(x.f, write) && acc(x.g, write)
{
    x.f := 4
    x.g := 5
    foo(x)
    assert x.f == 6
}

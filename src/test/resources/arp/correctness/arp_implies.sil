field f : Int
field g : Int

method foo(x: Ref)
requires acc(x.f, write) && (x.f != 0 ==> acc(x.g, rd))
ensures acc(x.f, write) && (old(x.f) != 0 ==> acc(x.g, rd))
ensures old(x.f != 0) ==> x.f == x.g + 1
{
    if (x.f != 0){
        x.f := x.g + 1
    }
}

method client(x: Ref)
requires acc(x.f, write) && acc(x.g, 1/2)
ensures acc(x.f, write) && acc(x.g, 1/2)
{
    x.f := 4
    inhale x.g == 5
    foo(x)
    assert x.g == 5
    assert x.f == 6
}

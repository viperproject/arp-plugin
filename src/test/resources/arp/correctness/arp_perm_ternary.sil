field f : Int
field g : Int

method foo(x: Ref)
requires acc(x.f, write) && acc(x.g, (x.f == 4 ? 1/4 : none) + (x.f > 0 ? rd : 1/2))
ensures acc(x.f, write) && acc(x.g, (old(x.f) == 4 ? 1/4 : none) + (x.f > 0 ? rd : 1/2))
ensures x.f == x.g + 1
{
    x.f := x.g + 1
}

method client(x: Ref)
requires acc(x.f, write) && acc(x.g, write)
ensures acc(x.f, write) && acc(x.g, write)
{
    x.f := 4
    x.g := 5
    foo(x)
    assert x.g == 5
    assert x.f == 6
}

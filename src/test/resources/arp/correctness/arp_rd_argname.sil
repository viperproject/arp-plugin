field f : Int
field g : Int

method foo(y: Ref)
requires acc(y.f, write) && acc(y.g, rd)
ensures acc(y.f, write) && acc(y.g, rd)
ensures y.f == y.g + 1
{
    y.f := y.g + 1
}

method client(x: Ref)
requires acc(x.f, write) && acc(x.g, 1/2)
ensures acc(x.f, write) && acc(x.g, 1/2)
{
    x.f := 4
    inhale x.g == 5
    foo(x)
    assert x.g == 5
    assert x.f == 6
}

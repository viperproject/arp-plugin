field f: Int
field g: Int
field h: Int
field r: Ref

method bar(x: Ref, y: Ref, z: Ref)
{
  inhale x != y && x != z && y != z // why is this needed?
  inhale acc(x.f, 1 / 4) && (acc(x.g, 1 / 4) && (acc(x.r, 1 / 4) && acc(x.r.h, 1 / 4)))
  inhale acc(y.f, 1 / 4) && (acc(y.g, 1 / 4) && (acc(y.r, 1 / 4) && acc(y.r.h, 1 / 4)))
  inhale acc(z.f, 1 / 4) && (acc(z.g, 1 / 4) && (acc(z.r, 1 / 4) && acc(z.r.h, 1 / 4)))
  var foo_call_rd: Perm
  var arg_x: Ref
  arg_x := x
  inhale none < foo_call_rd && foo_call_rd < perm(arg_x.f)
  exhale acc(arg_x.f, foo_call_rd)
}